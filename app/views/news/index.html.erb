<div class="content-left">

<h1>Devil Dog News:</h1>
 
<table width="500" class="table_border">
    <tr> 
        <th>Date</th>
        <th>Headline</th>
        <th>Source</th>
    </tr>
    <% @news.each do |news| %>
    <tr class="<%= cycle('odd_row', 'even_row') %>"> 
        <td><%= news.date.strftime("%b %d, %Y") %></td>
        <td><%= link_to news.title, if !news.content.empty? then news else news.ext_url end %></td>
        <td><%= news.source %></td>
    </tr>
<% end %>
</table>

<!-- Close content-left -->
</div>


<div id="right-column">

<div class="right-column-box">

