  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state, :size => '5' %>
  </div>
  </div>
  <div class="cell">
  <div class="field">
    <%= f.label :zip %><br />
    <%= f.text_field :zip, :size => '10' %>
