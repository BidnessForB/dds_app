  </div>
  </div>
  <div class="cell">
  <div class="field">
    <%= f.label :cell_phone %><br />
    <%= f.text_field :cell_phone, :size => '15' %>
  </div>
  </div>
</div>

<div class="clearer"></div>

<div class="indent_row">
  <div class="cell">
  <div class="field">
    <%= f.label :email %><br />
