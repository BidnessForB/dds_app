<% content_for :sidebar do %>
<% if current_user.roles.any? {|role| role.name == "superuser" or role.name == "admin" } %>
  <div align="center">
  <%= button_to 'Add New Role', new_role_path, :method => :get %>
  </div>
<% end %>

<% end %>

<h1>Roles</h1>

<table width="500" class="table_border">
  <tr>
    <th>id</th>
    <th>name</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr class="<%= cycle('odd_row', 'even_row') %>">
    <td><%= role.id %></td>
    <td><%= role.name %></td>
    <td><%= link_to 'Show', role %></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Destroy', role, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
