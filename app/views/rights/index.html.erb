<% content_for :sidebar do %>
<% if current_user.roles.any? {|role| role.name == "superuser" or role.name == "admin" } %>
  <div align="center">
  <%= button_to 'Add New Right', new_right_path, :method => :get %>
  </div>
<% end %>

<% end %>

<h1>Rights</h1>

<table width="500" class="table_border">
  <tr>
    <th>Resource</th>
    <th>Operation</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rights.each do |right| %>
  <tr class="<%= cycle('odd_row', 'even_row') %>">
    <td><%= right.resource %></td>
    <td><%= right.operation %></td>
    <td><%= link_to 'Show', right %></td>
    <td><%= link_to 'Edit', edit_right_path(right) %></td>
    <td><%= link_to 'Destroy', right, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

