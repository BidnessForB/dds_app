<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="indent_row">
  <div class="cell">
  <div class="field">
    <%= f.label :start %><br />
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.label :end %><br />
    <%= f.datetime_select :end %>
  </div>
  </div>
</div>

<div class="indent_row">
  <div class="cell">
  <div class="field">
    <%= f.label :event_types_id, "Event Type" %><br />
    <%= f.collection_select :event_type_id, EventType.all, :id, :title, :order => 'title ASC', :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :event_statuses_id, "Status" %><br />
    <%= f.collection_select :event_statuses_id, EventStatus.all, :id, :status, :order => 'status ASC', :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :title, "Event Name" %><br />
    <%= f.text_field :title, :size => "25" %>
  </div>
  <div class="field">
    <%= f.label :entered_by %><br />
    <%= f.text_field :entered_by, :size => "25"  %>
  </div>
  </div>
  <div class="cell">

  <div class="field">
    <%= f.label :location %><br />
    <%= f.collection_select :location_id, Location.all, :id, :short_name, :order => 'short_name ASC', :prompt => true %>
  </div>

  <div class="field">
    <%= f.label :contact_info %><br />
    <%= f.text_field :contact_info, :size => "25"  %>
  </div>
  <div class="field">
    <%= f.label :URL, "Event Website URL" %><br />
    <%= f.text_field :URL, :size => "25"  %>
  </div>
  </div>
  <div class="cell">
    <div class="field">
    <%= f.label :graphic_address, "Graphic Filename" %><br />
    <%= f.text_field :graphic_address, :size => "25" %>
  </div>
  </div>
</div>
<div class="clearer"></div>

<div class="indent_row">
  <div class="cell">
  <div class="field">
    <%= f.label :details %><br />
    <%= f.text_area :details, :rows => 5, :cols => 65 %>
  </div>
  </div>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
