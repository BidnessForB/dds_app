<% content_for :sidebar do %>
  <%= render "sidebars/blog" %>
<% end %>

<h1>Devil Dog Squadron Bulletin Board</h1>

<p>Most Recent</p>

<hr />

<% @posts.each do |post| %>

    <h2><%= link_to post.title, post %></h2>
    <p><%= simple_format(post.content) %></p>
    <p><em><%= post.created_at.strftime("%B %d, %Y") %></em> | <em>Categories: 
    
    <% post.categories.each do |category| %>
      <%= category.name %> 
    <%end %>
    </em> | <em>posted by: <% if post.user_id? %><%= post.user.member.first_name %> <%= post.user.member.last_name.first %>.<% end %></em></p>
    <%#= link_to 'Edit', edit_post_path(post) %>
    <%#= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
    <hr />
<% end %>
