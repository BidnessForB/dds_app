<% end %>

<h1>Devil Dog Squadron Bulletin Board</h1>

<p>Most Recent</p>

<hr />

<% @posts.each do |post| %>

    <h1 class="post"><%= link_to post.title, post %></h1>
    <p><%= simple_format(post.content) %></p>
    <p class="post_parameters"><%= post.created_at.strftime("%B %d, %Y") %> | Categories: 
    
    <% post.categories.each do |category| %>
      <%= category.name %> 
    <%end %>
     | posted by: <% if post.user_id? %><%= post.user.member.first_name %> <%= post.user.member.last_name.first %>.<% end %></p>
