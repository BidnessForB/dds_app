<h1>Listing photos</h1>

<table>
  <tr>
    <th>Gallery</th>
    <th>Photographer</th>
    <th>Photo title</th>
    <th>Description</th>
    <th>Filename</th>
    <th>Order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.gallery.gallery_name %></td>
    <td><%= photo.photographer.name %></td>
    <td><%= photo.photo_title %></td>
    <td><%= photo.description %></td>
    <td><%= photo.filename %></td>
    <td><%= photo.order %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

